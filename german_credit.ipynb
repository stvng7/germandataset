import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns

df = pd.read_csv("GermanCredit.csv")

none_counts = (df == 'none').sum()
cols_to_drop = none_counts.sort_values(ascending=False).index[:3]
df.drop(columns=cols_to_drop, inplace=True)

df = df.replace("'", "", regex=True)

# Map checking_status
checking_map = {
    'no checking': 'No Checking',
    '<0': 'Low',
    '0<=X<200': 'Medium',
    '>=200': 'High'
}
df['checking_status'] = df['checking_status'].map(checking_map)

savings_map = {
    'no known savings': 'No Savings',
    '<100': 'Low',
    '100<=X<500': 'Medium',
    '500<=X<1000': 'High',
    '>=1000': 'High'
}
df['savings_status'] = df['savings_status'].map(savings_map)

df['class'] = df['class'].map({'good': 1, 'bad': 0})

# Map employment
def map_employment(x):
    if x == 'unemployed':
        return 'Unemployed'
    elif x == '0<=X<1':
        return 'Amateur'
    elif x == '1<=X<4':
        return 'Professional'
    elif x == '4<=X<7':
        return 'Experienced'
    elif x == '>=7':
        return 'Expert'
    else:
        return x

df['employment'] = df['employment'].apply(map_employment)

print("Foreign Worker vs Class:")  # ADDED descriptive print
print(pd.crosstab(df['foreign_worker'], df['class']))

print("\nEmployment vs Savings Status:")  # ADDED descriptive print
print(pd.crosstab(df['employment'], df['savings_status']))

mask = (df['personal_status'] == 'male single') & (df['employment'] == 'Experienced')
print("\nAverage credit amount of single males with 4<=X<7 years employment:", df.loc[mask, 'credit_amount'].mean())  # FIXED: added print()

print("\nAverage credit duration for each job type:")  # ADDED descriptive print
print(df.groupby('job')['duration'].mean())  # FIXED: was grouping by 'employment', now correct 'job'

edu_df = df[df['purpose'] == 'education']
print("\nMost common checking status:", edu_df['checking_status'].mode()[0])  # FIXED: added print()
print("Most common savings status:", edu_df['savings_status'].mode()[0])      # FIXED: added print()

# Visualizations

# Bar charts: savings_status vs personal_status, checking_status vs personal_status
fig, axs = plt.subplots(1, 2, figsize=(14,6))

sns.countplot(x='savings_status', hue='personal_status', data=df, ax=axs[0])
axs[0].set_title('Savings Status vs Personal Status')

sns.countplot(x='checking_status', hue='personal_status', data=df, ax=axs[1])
axs[1].set_title('Checking Status vs Personal Status')

plt.show()

# Bar graph: property_magnitude vs average age for credit_amount > 4000
high_credit = df[df['credit_amount'] > 4000]
high_credit.groupby('property_magnitude')['age'].mean().plot(kind='bar')
plt.ylabel('Average Age')
plt.title('Average Age by Property Magnitude (Credit > 4000)')
plt.show()

# Pie charts: High savings_status & age > 40
subset = df[(df['savings_status'] == 'High') & (df['age'] > 40)]

fig, axs = plt.subplots(1, 3, figsize=(18,6))
subset['personal_status'].value_counts().plot(kind='pie', ax=axs[0], autopct='%1.1f%%')
axs[0].set_title('Personal Status')

subset['credit_history'].value_counts().plot(kind='pie', ax=axs[1], autopct='%1.1f%%')
axs[1].set_title('Credit History')

subset['job'].value_counts().plot(kind='pie', ax=axs[2], autopct='%1.1f%%')  # FIXED: was 'employment', now 'job'
axs[2].set_title('Job')

plt.show()
